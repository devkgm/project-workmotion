<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.workmotion.app.schedule.ScheduleDAO">
    <select id="getTaskSchedule" parameterType="ScheduleDTO" resultType="ScheduleDTO">
        SELECT * FROM SCHEDULE WHERE TASK_ID = #{task_id}
    </select>
    <select id="getMemberSchedule" parameterType="ScheduleDTO" resultType="ScheduleDTO">
        SELECT * FROM SCHEDULE WHERE MEMBER_ID = #{member_id}
    </select>
    <select id="getSchedule" parameterType="ScheduleDTO" resultType="ScheduleDTO">
        SELECT * FROM SCHEDULE WHERE TASK_ID = #{task_id} OR MEMBER_ID = #{member_id}
    </select>
    <insert id="createSchedule" parameterType="ScheduleDTO">
        INSERT INTO (ID, START_DT, END_DT, TITLE, TASK_ID, MEMBER_ID) SCHEDULE VALUES (SCHEDULE_SEQ.NEXTVAL,
        #{start_dt}, #{end_dt}, #{title}, #{task_id,jdbcType=NUMBER}, #{member_id,jdbcType=NUMBER})
    </insert>
</mapper>