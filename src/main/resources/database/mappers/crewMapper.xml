<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.workmotion.app.project.crew.CrewDAO">
    <insert id="addCrew" parameterType="Map">
        INSERT INTO CREW (PROJECT_ID, MEMBER_ID) VALUES (#{project_id}, #{member_id})
    </insert>
    <delete id="removeCrew" parameterType="Map">
        DELETE FROM CREW WHERE project_id = #{project_id} AND member_id = #{member_id}
    </delete>
    <select id="getCrewList" parameterType="ProjectDTO" resultMap="getCrewList">
        SELECT m.*, p.NAME as POSITION
        FROM CREW c
        LEFT JOIN MEMBER m
        ON c.MEMBER_ID = m.id
        LEFT JOIN POSITION p
        ON m.POSITION_ID = p.ID
        WHERE c.PROJECT_ID = #{id}
    </select>
    <resultMap id="getCrewList" type="MemberDTO">
        <id column="ID" property="id"/>
        <result column="EMAIL" property="email"/>
        <result column="NAME" property="name"/>
        <result column="PHONE" property="phone"/>
        <association property="positionDTO" javaType="PositionDTO">
            <id column="POSITION_ID" property="id"/>
            <result column="POSITION" property="name"/>
        </association>
    </resultMap>
</mapper>